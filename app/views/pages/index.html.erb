<% @page_title = "| Pages" %>

<h1>Pages</h1>
<%= link_to("Add New Page", {:action => 'new'}) %>

<table>
  <tr>
    <th>Subject Id</th>
    <th>Position</th>
    <th>Pages</th>
    <th>Permalink</th>
    <th>Visible</th>
    <th>Actions</th>
  </tr>
  <% @pages.each do |page|   %>
    <tr>
      <td><%= page.subject_id %></td>
      <td><%= page.position %></td>
      <td><%= page.name %></td>
      <td><%= page.permalink %></td>
      <td><%= page.visible ? 'Yes' : 'No' %></td>
      <td>
        <%= link_to("Show", {:action => 'show', :id => page.id}, :class => "show") %>
        <%= link_to("Edit", {:action => 'edit', :id => page.id}, :class => "edit") %>
        <%= link_to("Delete", {:action => 'delete', :id => page.id}, :class => "delete") %>
      </td>
    </tr>
  <% end %>
</table>
