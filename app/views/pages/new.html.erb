<% @page_title = "| Pages" %>

<%= link_to("Back To Page List", {:action => 'index'}) %>
<h1>Create Page</h1>

<%= form_for(:page, :url => {:action => 'create', :id => @page.id}) do |f| %>

  <table>
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
      <tr>
        <th>Position</th>
        <td><%= f.text_field(:position) %></td>
      </tr>
      <tr>
        <th>Visible</th>
        <td><%= f.text_field(:visible) %></td>
      </tr>
  </table>

<%= submit_tag("Create Page") %>
<% end %>
