<% @page_title = "| Section" %>

<%= link_to("Back To List", {:action => 'index'}, :class => 'test') %>

<h1>Edit Section</h1>

<%= form_for(:section, :url => {:action => 'update', :id => @section.id}) do |f| %>

  <table>
    <tr>
      <th>Name</th>
      <td><%= f.text_field(:name)  %> </td>
    </tr>
    <tr>
      <th>Position</th>
      <td><%= f.text_field(:position) %> </td>
    </tr>
    <tr>
      <th>Visible</th>
      <td><%= f.text_field(:visible) %> </td>
    </tr>
    <tr>
      <th>Content</th>
      <td><%= f.text_field(:content) %> </td>
    </tr>
  </table>

  <%= submit_tag("Update Section") %>

<% end %>
