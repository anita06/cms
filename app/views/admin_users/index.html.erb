<% @page_title = "| Admin User List" %>

<h2>Admin Users</h2>

<%= link_to("Add New Admin User", {:action => "new"}) %>

<table>
  <tr>
    <th>Username</th>
    <th>Name</th>
    <th>Email</th>
    <th>Actions</th>
  </tr>
  <% @admin_users.each do |admin_user| %>
    <tr>
      <td><%= admin_user.username %></td>
      <td><%= admin_user.first_name %></td>
      <td><%= mail_to(admin_user.email) %></td>
      <td>
        <%= link_to('Edit', {:action => 'edit', :id => admin_user.id})  %>
        <%= link_to('Delete', {:action => 'delete', :id => admin_user.id})  %>
      </td>
    </tr>
  <% end %>
</table>
